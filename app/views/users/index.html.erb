<h1 class="h3 mb-2 text-gray-800">Users</h1>

<div>
    <%= link_to new_user_path, {remote: true, class: "btn btn-info", id: "añadir-user-btn"} do %>
        <span class="fas fa-plus-square"> Añadir</span>
    <% end %>
</div>
<br/>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="tablaUsers" class="table table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Direccion</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |us| %>
                        <tr id="user_<%= us.id %>" >
                            <td><%= us.nombres %></td>
                            <td><%= us.apellidos %></td>
                            <td><%= us.direccion %></td>
                            <td>
                                <%= link_to "Mostrar", user_path(us), {class: "btn btn-info btn-xs", remote: true} %>
                                <%= link_to "Editar", edit_user_path(us), html_options = {class: "btn btn-info btn-xs", remote: true} %>
                                <%= link_to 'Borrar', us, remote: true, method: :delete, data: { confirm: "¿Borrar user: #{us.nombres}?" }, class: "btn btn-danger btn-xs" %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%= render 'modal_users' %>